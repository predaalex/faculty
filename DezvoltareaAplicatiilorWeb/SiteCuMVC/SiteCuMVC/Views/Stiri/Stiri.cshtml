@{
}

@model SiteCuMVC.Models.Stire[]

<div class="text-center">
    <h1 class="display-4">Salut!</h1>
    <p>Aici vor aparea stirile.</p>
    @foreach (Stire stire in @Model)
    {
        <div class="stire">
            <h1><a asp-action="Stire" asp-route-Id="@stire.Id">@stire.Titlu</a></h1>
            <p>@stire.Lead</p>
            <p>Adaugat de @stire.Autor la data @stire.Data, in categoria @stire.Categorie.Nume</p>
            <p>Pentru a edita o stire: <a asp-action="ShowEditeazaStire" asp-route-Id="@stire.Id">editeaza </a></p>
            <p>Pentru a sterge o stire: <a onclick="return confirm('Esti sigur ca vrei sa stergi stirea?')" asp-action="Delete" asp-route-Id="@stire.Id">sterge </a></p>
        </div>
    }
    <p>Pentru a adauga o stire: <a asp-action="ShowAdaugareStire">adauga </a></p>
</div>
